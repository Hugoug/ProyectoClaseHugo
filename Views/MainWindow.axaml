<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ProyectoClaseHugo.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:visualBasic="clr-namespace:Microsoft.VisualBasic;assembly=Microsoft.VisualBasic.Core"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="ProyectoClaseHugo.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="ProyectoClaseHugo">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    

    <UniformGrid Rows="2" Background="Black">
       <!-- Background="Black"-->
            
            <!-- Incio Contenedor Consultas -->
        <StackPanel>
           <ComboBox ItemsSource="{Binding Pokemons}"
                     IsVisible="False"/>
           <ListBox Background="Transparent"
                    Height="350"
                    SelectedItem="{Binding PokeSeleccionado}"
                    ItemsSource="{Binding Pokemons}">
              <Interaction.Behaviors>
                   <EventTriggerBehavior EventName="DoubleTapped">
                       <InvokeCommandAction Command="{Binding CargarPokeSeleccionadoCommand}"/>
                   </EventTriggerBehavior>
               </Interaction.Behaviors> 

               <ItemsControl.ItemsPanel>
                   <ItemsPanelTemplate>
                       <WrapPanel/>
                   </ItemsPanelTemplate>
               </ItemsControl.ItemsPanel>

               <ItemsControl.ItemTemplate>
                   <DataTemplate>
                       <Border Margin="10" 
                               Padding="15"
                               CornerRadius="10"
                               BorderBrush="OrangeRed"
                               Background="Orange"
                               BorderThickness="1"
                               BoxShadow="5 5 10 0 Yellow">
                           <StackPanel Orientation="Vertical">
                               <Image Width="60" 
                                      Source="avares://ProyectoClaseHugo/Assets/logoPokemon.png"/>

                               <TextBlock HorizontalAlignment="Center"
                                          Margin="2"
                                          FontStyle="Oblique"
                                          Text="{Binding Nombre}"/>
                               <TextBlock HorizontalAlignment="Center"
                                          Margin="1"
                                          FontStyle="Oblique"
                                          Text="{Binding Tipo}"/>
                               <TextBlock HorizontalAlignment="Center"
                                          Margin="1"
                                          FontStyle="Oblique"
                                          Text="{Binding Shiny}"/>
                           </StackPanel>
                       </Border>
                   </DataTemplate>
               </ItemsControl.ItemTemplate>
           </ListBox>
        </StackPanel>
        <!-- Fin Contenedor Consultas -->
            
        <!-- Inicio Contenedor del formulario-->
        <Border Margin="15" 
                Padding="20"
                CornerRadius="20"
                BorderBrush="red"
                Background="#35A5FB"
                BorderThickness="1"
                BoxShadow="5 10 20 0 White">
            
        <UniformGrid Columns="3">
        <StackPanel>
        <!--Entrada de texto para nombre del pokemon -->
        <TextBox Width="200"
                 Margin="10"
                 Text="{Binding Poke.Nombre}"
                 HorizontalAlignment="Center"/>
        
        
        <!--selector de tipo -->
        <ComboBox Width="200" SelectedIndex="0"
                  SelectedItem="{Binding Poke.Tipo}"
                  ItemsSource="{Binding ListaTipos}"
                  HorizontalAlignment="Center"/>
        
        <!-- Selector de fecha 
        <CalendarDatePicker HorizontalAlignment="Center" 
                            SelectedDate="{Binding Boli.Fecha}"
                            Width="200">
           
        </CalendarDatePicker>-->
        
        
        <TextBlock Text="{Binding Mensaje}"
                   Foreground="DarkRed"
                   HorizontalAlignment="Center"
                   Margin="10"/>
        
        <Border BorderBrush="Black"
                BorderThickness="1"
                Width="200"
                BoxShadow="5 10 20 0 White">
        <Button Width="200"
                Content="CREAR"
                IsVisible="{Binding ModoCrear}"
                Command="{Binding MostrarPokeCommand}"
                CommandParameter="{Binding ElementName=Condiciones}"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"/>
        </Border>
        
        
        
        <Button Width="200"
                IsVisible="{Binding ModoEditar}"
                Margin="10"
                Content="EDITAR"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"/>
      
        
        
        <Button Width="200"
                IsVisible="{Binding ModoEditar}"
                Margin="10"
                Content="CANCELAR"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"/>
        
        </StackPanel>
        <StackPanel>
        <TextBlock Text="{Binding Greeting}" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="18"
                   Foreground="White"
                   FontWeight="Bold"
                   FontStyle="Italic"/>   
        
        <Ellipse Margin="0,-35,0,0" 
                 HorizontalAlignment="Center" 
                 Width="240" Height="50" 
                 StrokeThickness="1" 
                 Stroke="OrangeRed"/>
        
        <StackPanel HorizontalAlignment="Center"
                    IsVisible="{Binding Habilidades}"
                    Orientation="Vertical" 
                    Width="200">
            <TextBox HorizontalAlignment="Center"
                     Margin="0,5,0,5" 
                     Width="200"/>
            <TextBox HorizontalAlignment="Center"
                     VerticalAlignment="Bottom"
                     Margin="5,5,0,5" 
                     Width="200"/>
            <TextBox HorizontalAlignment="Center"
                     Margin="0,5,0,5" 
                     Width="200"/>
            <TextBox HorizontalAlignment="Center"
                     Margin="5,5,0,5" 
                     Width="200"/>
        </StackPanel>
        
        </StackPanel>
        <StackPanel>
            <!-- Check para asignar habilidades -->
            <CheckBox Content="Â¿Asignar habilidades? ðŸ’ª"
                      HorizontalAlignment="Center"
                      Margin="10"
                      Width="200"
                      Foreground="White"
                      Name="habilidades"/>
            
            
            <CheckBox Content="Â¿Es Pokemon Shiny? âœ¨"
                      HorizontalAlignment="Center"
                      Margin="10"
                      Width="200"
                      Foreground="White"
                      Name="Shiny"/>
            
            <CheckBox Content="Aceptar condiciones"
                      HorizontalAlignment="Center"
                      Margin="0"
                      Width="200"
                      Foreground="White"
                      Command="{Binding estadoInicialCheckCommand}"
                      CommandParameter="{Binding ElementName=Condiciones}"
                      Name="Condiciones"/>
        
        </StackPanel>
        </UniformGrid>
        </Border>
        <!-- Fin Contenedor del formulario-->
        
        
                       
    </UniformGrid>
    
</Window>
